params {
    fastqc_bin = "/home/aishwarya/miniconda3/envs/bnf/bin/fastqc"
    cutadapt_bin = "/home/aishwarya/miniconda3/envs/bnf/bin/cutadapt"
    bwa_bin = "/home/aishwarya/miniconda3/envs/bnf/bin/bwa"
    samtools_bin = "/home/aishwarya/miniconda3/envs/bnf/bin/samtools"
    bcftools_bin = "/home/aishwarya/miniconda3/envs/bnf/bin/bcftools"
    
    fastq_dir = "${projectDir}/data"
    reference = "${projectDir}/reference_genome/chr22.fa"
    output = "${projectDir}/results"
}

process {
    cpus = 2
    memory = '4 GB'
    time = '2h'
}

report {
    enabled = true
    file = "${params.output}/pipeline_report.html"
}

timeline {
    enabled = true
    file = "${params.output}/timeline.html"
}